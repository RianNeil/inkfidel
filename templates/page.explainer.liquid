<head>
    <meta http-equiv="Content-Type" content="text/html; charset=UTF-8"/>
    {{ 'styles.css' | asset_url | stylesheet_tag }}
    <!--[if IE 7]><link rel="stylesheet" href="//cdn.sweettoothrewards.com/assets/themes/minimal/v1.0/css/fontello-ie7.min.css"><![endif]-->
</head>

<body>
    <div class="sweettooth-explainer  {{ settings.colour_scheme }}">
        <div class="background program-summary-bg">
                <section class="program-summary">
                    <h1>{{ page.title }}</h1>
                    <div class="program-description">
                      {{ page.content }}
                    </div>
                    <a class="cta-button" href="#" data-st-intent="st:points:rewards">{{ 'general.explainer_page.loyalty_cta' | t }}</a>
                </section>
        </div>

        <div class="background points-worth-box-bg">
            <section class="points-worth-box">
                <span class="label">{{ 'general.explainer_page.earn_points' | t }}</span>
                <span class="worth">{{ settings.earn_points_value }}</span>
                <span class="points_icon"></span>
                <span class="label">{{ 'general.explainer_page.spend_points' | t }}</span>
                <span class="worth">{{ settings.spent_points_value }}</span>
            </section>

        </div>

{% if settings.welcome_points or settings.follow_social or settings.share_social or settings.birthday_points == true %}
        <div class="no-background earning-legend-bg">
            <section class="earning-legend">
                <h2>{{ 'general.explainer_page.ways_to_earn' | t }}</h2>
                <div class="section-description">
                    {{ settings.about_program }}
                </div>
                <div class="earning-options">
                  {% if settings.welcome_points %}
                  <a href="#" data-st-intent="st:points:rules">
                    <div class="earning-box">
                        <div class="earning-icon st-icon-key"></div>
                        <div class="earning-amount">
                            <span class="points-value">{{ settings.points_for_account }}</span>
                            <span class="points-label">{{ settings.points_name }}</span>
                        </div>
                        <div class="earning-description">
                            {{ 'general.explainer_page.desc_for_account' | t }}
                        </div>
                    </div>
                  </a>
                    {% endif %}
                    {% if settings.follow_social%}
                  <a href="#" data-st-intent="st:points:rules">
                    <div class="earning-box">
                        <div class="earning-icon st-icon-thumbs-up"></div>
                        <div class="earning-amount">
                            <span class="points-value">{{ settings.points_for_follow }}</span>
                            <span class="points-label">{{ settings.points_name }}</span>
                        </div>
                        <div class="earning-description">
                            {{ 'general.explainer_page.desc_for_follow' | t }}
                        </div>
                    </div>
                  </a>
                    {% endif %}
                    {% if settings.share_social%}
                  <a href="#" data-st-intent="st:points:rules">
                    <div class="earning-box">
                        <div class="earning-icon st-icon-desktop"></div>
                        <div class="earning-amount">
                            <span class="points-value">{{ settings.points_for_share }}</span>
                            <span class="points-label">{{ settings.points_name }}</span>
                        </div>
                        <div class="earning-description">
                            {{ 'general.explainer_page.desc_for_share' | t }}
                        </div>
                    </div>
                  </a>
                    {% endif %}
                    {% if settings.birthday_points %}
                  <a href="#" data-st-intent="st:points:rules">
                    <div class="earning-box">
                        <div class="earning-icon st-icon-heart"></div>
                        <div class="earning-amount">
                            <span class="points-value">{{ settings.points_for_birthday }}</span>
                            <span class="points-label">{{ settings.points_name }}</span>
                        </div>
                        <div class="earning-description">
                            {{ 'general.explainer_page.desc_for_birthday' | t }}
                        </div>
                    </div>
                  </a>
                    {% endif %}
                </div>
            </section>
        </div>
        {% endif %}
        {% if settings.referral_program %}
        <div class="no-background referral-summary-bg">
            <section class="referral-summary">
                <h2>Invite a Friend</h2>
                <div class="section-description">
                    {{ setting.referral_description }}
                </div>
              <a href="#" data-st-intent="st:referrals:offers">
                <div class="referral-box">
                    <div class="earning-box">
                        <div class="earning-icon st-icon-megaphone"></div>
                        <div class="earning-amount">
                            <span class="points-value">{{ settings.points_for_referral }}</span>
                            <span class="points-label">{{ settings.points_name }}</span>
                        </div>
                        <div class="earning-description">
                            {{ 'general.explainer_page.desc_for_referral' | t }}
                        </div>
                    </div>
                </div>
              </a>

            </section>
        </div>
        {% endif %}
        {% if settings.enable_faq %}
        <div class="background faq-bg">
            <section class="faq">
                <h3>Frequently Asked Questions</h3>
                <ul class="question-list">
                    {% if settings.st_question_1 and settings.st_answer_1 != blank %}
                    <li class="question">
                        <span>{{ settings.st_question_1 }}</span>
                        <span class="answer">
                            {{ settings.st_answer_1 }}
                        </span>
                    </li>
                    {% endif %}
                    {% if settings.st_question_2 and settings.st_answer_2 != blank %}
                    <li class="question">
                        <span>{{ settings.st_question_2 }}</span>
                        <span class="answer">
                            {{ settings.st_answer_2 }}
                        </span>
                    </li>
                    {% endif %}
                    {% if settings.st_question_3 and settings.st_answer_3 != blank %}
                    <li class="question">
                        <span>{{ settings.st_question_3 }}</span>
                        <span class="answer">
                            {{ settings.st_answer_3 }}
                        </span>
                    </li>
                    {% endif %}
                    {% if settings.st_question_4 and settings.st_answer_4 != blank %}
                    <li class="question">
                        <span>{{ settings.st_question_4 }}</span>
                        <span class="answer">
                            {{ settings.st_answer_4 }}
                        </span>
                    </li>
                    {% endif %}
                    {% if settings.st_question_5 and settings.st_answer_5 != blank %}
                    <li class="question">
                        <span>{{ settings.st_question_5 }}</span>
                        <span class="answer">
                            {{ settings.st_answer_5 }}
                        </span>
                    </li>
                    {% endif %}
                    {% if settings.st_question_6 and settings.st_answer_6 != blank %}
                    <li class="question">
                        <span>{{ settings.st_question_6 }}</span>
                        <span class="answer">
                            {{ settings.st_answer_6 }}
                        </span>
                    </li>
                    {% endif %}
                    {% if settings.st_question_7 and settings.st_answer_7 != blank %}
                    <li class="question">
                        <span>{{ settings.st_question_7 }}</span>
                        <span class="answer">
                            {{ settings.st_answer_7 }}
                        </span>
                    </li>
                    {% endif %}
                    {% if settings.st_question_8 and settings.st_answer_8 != blank %}
                    <li class="question">
                        <span>{{ settings.st_question_8 }}</span>
                        <span class="answer">
                            {{ settings.st_answer_8 }}
                        </span>
                    </li>
                    {% endif %}
                    {% if settings.st_question_9 and settings.st_answer_9 != blank %}
                    <li class="question">
                        <span>{{ settings.st_question_9 }}</span>
                        <span class="answer">
                            {{ settings.st_answer_9 }}
                        </span>
                    </li>
                    {% endif %}
                    {% if settings.st_question_10 and settings.st_answer_10 != blank %}
                    <li class="question">
                        <span>{{ settings.st_question_10 }}</span>
                        <span class="answer">
                            {{ settings.st_answer_10 }}
                        </span>
                    </li>
                    {% endif %}
                </ul>
            </section>
        </div>
        {% endif %}
    </div>
</body>